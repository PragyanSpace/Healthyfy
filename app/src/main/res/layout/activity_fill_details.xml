<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".FillDetails"
        android:background="@color/white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="1">

            <TextView
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:layout_marginTop="30dp"
                android:layout_weight="0.5"
                android:paddingStart="10dp"
                android:text="Blood group:"
                android:textColor="@color/black"
                android:background="@color/white"
                android:textSize="28sp"
                android:textStyle="bold" />

            <EditText
                android:textColor="@color/black"
                android:layout_width="185dp"
                android:layout_height="50dp"
                android:layout_marginTop="30dp"
                android:layout_weight="0.5"
                android:hint="Enter blood group"
                android:paddingStart="10dp"
                android:id="@+id/createTag" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="1">

            <TextView
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:layout_marginTop="30dp"
                android:layout_weight="0.5"
                android:paddingStart="10dp"
                android:text="Date of Birth:"
                android:background="@color/white"
                android:textColor="@color/black"
                android:textSize="28sp"
                android:textStyle="bold" />

            <TextView
                android:textColor="@color/black"
                android:id="@+id/createDob"
                android:layout_width="185dp"
                android:layout_height="50dp"
                android:layout_marginTop="17dp"
                android:layout_weight="0.5"
                android:paddingStart="10dp"
                android:hint="Enter date Of Birth"
                android:textSize="16sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="1">

            <TextView
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:layout_marginTop="30dp"
                android:layout_weight="0.5"
                android:paddingStart="10dp"
                android:text="Contact no.:"
                android:background="@color/white"
                android:textColor="@color/black"
                android:textSize="28sp"
                android:textStyle="bold" />

            <EditText
                android:textColor="@color/black"
                android:layout_width="185dp"
                android:layout_height="50dp"
                android:layout_marginTop="30dp"
                android:layout_weight="0.5"
                android:hint="Enter number"
                android:paddingStart="10dp"
                android:id="@+id/createOrigin" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="1">

            <TextView
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:layout_weight="0.5"
                android:background="@color/white"
                android:paddingStart="10dp"
                android:text="Previous diseases:"
                android:textColor="@color/black"
                android:textSize="28sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/createBirthPlace"
                android:layout_width="185dp"
                android:layout_height="50dp"
                android:layout_marginTop="30dp"
                android:layout_weight="0.5"
                android:hint="Enter kla Place"
                android:paddingStart="10dp"
                android:textColor="@color/black" />
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:paddingStart="20dp"
            android:text="*Age will be updated automatically."
            android:textColor="#00ff00"
            android:textSize="28sp"
            android:textStyle="bold" />

        <Button
            android:layout_width="200dp"
            android:layout_height="70dp"
            android:text="submit"
            android:layout_marginTop="50dp"
            android:layout_gravity="center_horizontal" />

    </LinearLayout>
</layout>